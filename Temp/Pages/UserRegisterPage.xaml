<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Temp.Pages.UserRegisterPage"
             Title="UserRegisterPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Welcome, Please Register before continue"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label Text="{Binding Username, StringFormat='Username: {0}'}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label Text="{Binding Email, StringFormat='Email: {0}'}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label Text="{Binding Gender, StringFormat='Gender: {0}'}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Button
              
                Text="Continue"
                FontSize="Large"
                HorizontalOptions="FillAndExpand"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
