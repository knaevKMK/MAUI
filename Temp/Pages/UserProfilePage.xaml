<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Temp.Pages.UserProfilePage"
             Title="UserProfilePage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Welcome, Please Register before continue"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <Label Text="Username"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Entry
                    x:Name="Username"
                    Text="{Binding Username}"
                    />

            <Label Text="Email"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Entry
                    x:Name="Email"
                    Text="{Binding Email}"
                    Keyboard="Email"
                    />

          
            
            <Button
               
                Text="Login"
                FontSize="Large"
                HorizontalOptions="FillAndExpand"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
